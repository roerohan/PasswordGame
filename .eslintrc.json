{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-typescript/base"
    ],
    "root": true,
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            4
        ],
        "no-underscore-dangle": 0
    }
}